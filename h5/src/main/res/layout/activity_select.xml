<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/m_selecte_bg">

    <FrameLayout
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout

            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@mipmap/muana_spinner_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请选择车辆版本"
                android:textColor="#ffffff"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:gravity="center"-->
        <!--android:orientation="horizontal">-->

        <!--<ImageView-->
        <!--android:id="@+id/m_no_btn"-->
        <!--android:layout_width="79dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_marginRight="40dp"-->
        <!--android:src="@mipmap/m_no_btn" />-->

        <!--<ImageView-->
        <!--android:id="@+id/muana_yes_btn"-->
        <!--android:layout_width="79dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:src="@mipmap/muana_yes_btn" />-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:id="@+id/spinner_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/m_spinner_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/text_1"
                        style="@style/spinner_text"
                        android:text="智联御动版"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/m_line" />

                    <TextView
                        android:id="@+id/text_2"
                        style="@style/spinner_text"
                        android:text="智联享动版"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/m_line" />

                    <TextView
                        android:id="@+id/text_3"
                        style="@style/spinner_text"
                        android:text="型动版"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/m_line" />

                    <TextView
                        android:id="@+id/text_4"
                        style="@style/spinner_text"
                        android:text="智联灵动版"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/m_line" />

                    <TextView
                        android:id="@+id/text_5"
                        style="@style/spinner_text"
                        android:text="智联韵动版"
                        android:textStyle="bold" />


                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>